<div class='container'>
  <h1 class='api-headers'>Top 10 Twitch Streamers Online Now</h1>

  <table class = "table">
    <tr>
      <th>Game</th>
      <th>Streamer</th>
      <th></th>
      <th>Total Views</th>
      <th>Total Followers</th>
    </tr>
    <% @presenter.streams.take(10).each do |stream|%>
      <tr>
        <td><%= stream.game %></td>
        <td><%= link_to stream.streamer, stream.url, target: "_blank", class:'btn btn-info btn-sm' %></td>
        <td><%= image_tag(stream.logo, class:'img-circle') %></td>
        <td><%= stream.views %></td>
        <td><%= stream.followers %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class='container'>
  <h1 class='api-headers'>Top 10 Movies Out Right Now</h1>
  <p class='kudos'>Big shout out to <a target="_blank" href="https://www.themoviedb.org/">The Movie DB</a> for all this sweet information!</p>
   <% @presenter.movies.take(10).each do |movie|%>
  <div class='col-md-6'>
    <div class='col-md-4'>
      <img src="https://image.tmdb.org/t/p/original<%= movie.image %>" class='img-responsive'>
    </div>

    <div class='col-md-8'>
      <h3><%= movie.title %></h3>
      <li><%= movie.release %></li>
      <li><%= movie.overview %></li>
    </div>
  </div>
  <% end %>
</div>
